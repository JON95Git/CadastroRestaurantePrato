@model SiteMVC.Models.Prato
@{
                /**/

                ViewBag.Title = "Editar prato";
}

<h1>Editar prato</h1>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.HiddenFor(m => m.IdPrato)

    <div class="form-group">
        @Html.LabelFor(m => m.NomePrato, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NomePrato, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NomePrato, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PrecoPrato, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PrecoPrato, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PrecoPrato, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Restaurantes.NomeRestaurante, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.IdRestaurante,
                                    new SelectList(ViewBag.Restaurante, "IdRestaurante", "NomeRestaurante"),
                                   "Restaurante", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.IdRestaurante, "", new { @class = "text-danger" })
        </div>
    </div>

    @*       <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <img src="@Model.Imagem" alt="@Model.Nome image" class="img-thumbnail" />
            </div>
        </div>*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar alterações" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}