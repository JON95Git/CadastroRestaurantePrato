
@model IEnumerable<SiteMVC.Models.Prato>
@{
    ViewBag.Title = "Index";
}
<h2>Pratos</h2>
<p>
    @Html.ActionLink("Incluir Novo Prato", "Create", "Pratos", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
      
        <th>@Html.DisplayNameFor(model => model.NomePrato) </th>
        <th>@Html.DisplayNameFor(model => model.PrecoPrato)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
           
            <td>@Html.DisplayFor(modelItem => item.NomePrato)</td>
            <td>@Html.DisplayFor(modelItem => item.PrecoPrato)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdPrato }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.IdPrato }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.IdPrato })
            </td>
        </tr>
    }
</table>
