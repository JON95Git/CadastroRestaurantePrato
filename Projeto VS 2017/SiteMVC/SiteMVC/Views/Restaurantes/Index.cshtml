
@model IEnumerable<SiteMVC.Models.Restaurante>
@{
    ViewBag.Title = "Index";
}
<h2>Restaurantes</h2>
<p>
    @Html.ActionLink("Incluir Novo Restaurante", "Create", "Restaurantes", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.IdRestaurante)</th>
        <th>@Html.DisplayNameFor(model => model.NomeRestaurante) </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.IdRestaurante)</td>
            <td>@Html.DisplayFor(modelItem => item.NomeRestaurante)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdRestaurante }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.IdRestaurante }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.IdRestaurante })
            </td>
        </tr>
    }
</table>
